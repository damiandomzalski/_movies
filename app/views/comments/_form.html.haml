= simple_form_for ([@movie, @movie.comments.build]) do |f|
  =f.error_notification
  .form-group
    = f.label :content, label: "Post a comment below"
    %br/
    = f.text_area :content, placeholder: "Post a comment", :class => "form-control", :rows =>3
    %br/
    = f.submit :class => "btn btn-sm btn-primary"
